CREATE TABLE user_info (
		id BIGINT NOT NULL PRIMARY KEY AUTO_INCREMENT,
		user_name VARCHAR(100) NOT NULL DEFAULT '0' COMMENT '用户名',
		pass_word VARCHAR(50) NOT NULL DEFAULT '0' COMMENT '密码',
		email VARCHAR(100) NOT NULL DEFAULT '0' COMMENT '邮箱',
		phone VARCHAR(100) NOT NULL DEFAULT '0' COMMENT '手机',
		role INT NOT NULL DEFAULT '0' COMMENT '角色，1用户2管理员3经理'
)